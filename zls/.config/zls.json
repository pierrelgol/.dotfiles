{
    "$schema": "https://raw.githubusercontent.com/zigtools/zls/master/schema.json",
    "zig_exe_path": "/home/pollivie/local/bin/zig",
    "enable_snippets": true,
    "enable_argument_placeholders" : true,
    "build_on_save": true,
    "build_on_save_step": "test",
    "enable_autofix": true,
    "enable_inlay_hints": true,
    "inlay_hints_show_variable_type_hints": true,
    "inlay_hints_show_struct_literal_field_type": true,
    "inlay_hints_show_parameter_name": false,
    "inlay_hints_show_builtin": true,
    "inlay_hints_exclude_single_argument": true,
    "inlay_hints_hide_redundant_param_names": true,
    "warn_style": true,
    "highlight_global_var_declarations": false,
    "dangerous_comptime_experiments_do_not_enable": true,
    "skip_std_references": false,
    "prefer_ask_check_as_child_process" : true,
    "enable_ast_check_diagnostics": true,
    "enable_import_embedfile_argument_completions": true,
    "operator_completions": true,
    "semantic_tokens": "full"
}
